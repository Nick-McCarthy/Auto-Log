<section>
    <div class="login-box">
        <h3>
            <span style="color:white">Logged in as:</span>
            <span style="color:#3A6BEB">Full Name</span>
        </h3>

    </div>
</section>

{{#if vehicles.length}}
<div>
    <h3>Saved Vehicles:</h3>

    {{#each vehicles as |vehicle|}}
    <div class="card">
        <div class="vehicle">
            <p>{{make}} - {{model}}</p>
        </div>
        <div class="container">
            <p>{{year}}</p>
            <p>{{mileage}}</p>
            <p>{{vin}}</p>
            <p>{{logCount}}</p>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}

<div>
    <a href='/vehicleform'><input type="submit" value="Add New Vehicle"></a>
</div>